{
  "$id": "https://smallprotocol.dev/schemas/small/v1.0.0/intent.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SMALL Intent",
  "description": "Human-owned project intent and goals",
  "type": "object",
  "required": [
    "small_version",
    "owner",
    "intent",
    "scope",
    "success_criteria"
  ],
  "properties": {
    "small_version": {
      "type": "string",
      "const": "1.0.0",
      "description": "SMALL protocol version"
    },
    "owner": {
      "type": "string",
      "const": "human",
      "description": "Owner of this artifact (must be 'human')"
    },
    "intent": {
      "type": "string",
      "minLength": 1,
      "description": "The core intent/goal of the project"
    },
    "scope": {
      "type": "object",
      "required": ["include", "exclude"],
      "properties": {
        "include": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Paths or patterns to include in scope"
        },
        "exclude": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Paths or patterns to exclude from scope"
        }
      },
      "additionalProperties": false
    },
    "success_criteria": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Criteria that define success"
    }
  },
  "additionalProperties": false
}
