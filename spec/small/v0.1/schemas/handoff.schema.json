{
  "$id": "https://small.dev/schemas/small/v0.1/handoff.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SMALL Handoff",
  "description": "Shared resume entrypoint for agent sessions",
  "type": "object",
  "required": [
    "small_version",
    "generated_at",
    "current_plan",
    "recent_progress"
  ],
  "properties": {
    "small_version": {
      "type": "string",
      "const": "0.1",
      "description": "SMALL protocol version"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when this handoff was generated"
    },
    "current_plan": {
      "type": "object",
      "required": [
        "generated_at",
        "tasks"
      ],
      "properties": {
        "generated_at": {
          "type": "string",
          "format": "date-time"
        },
        "tasks": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "id",
              "description",
              "status"
            ],
            "properties": {
              "id": {
                "type": "string",
                "minLength": 1
              },
              "description": {
                "type": "string",
                "minLength": 1
              },
              "status": {
                "type": "string",
                "enum": ["pending", "in_progress", "completed", "blocked", "cancelled"]
              },
              "dependencies": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false,
      "description": "Current plan structure (from plan.small.yml)"
    },
    "recent_progress": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "timestamp",
          "task_id",
          "status"
        ],
        "properties": {
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "task_id": {
            "type": "string",
            "minLength": 1
          },
          "status": {
            "type": "string",
            "enum": ["pending", "in_progress", "completed", "blocked", "cancelled"]
          },
          "evidence": {
            "oneOf": [
              {
                "type": "string",
                "minLength": 1
              },
              {
                "type": "object"
              }
            ]
          },
          "verification": {
            "oneOf": [
              {
                "type": "string",
                "minLength": 1
              },
              {
                "type": "object"
              }
            ]
          },
          "command": {
            "type": "string",
            "minLength": 1
          },
          "test": {
            "oneOf": [
              {
                "type": "string",
                "minLength": 1
              },
              {
                "type": "object"
              }
            ]
          },
          "link": {
            "type": "string",
            "format": "uri"
          },
          "commit": {
            "type": "string",
            "pattern": "^[a-f0-9]{7,40}$"
          },
          "notes": {
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "description": "Recent progress entries (last N from progress.small.yml)"
    },
    "next_steps": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Optional array of next steps for resuming work"
    }
  },
  "additionalProperties": false
}
