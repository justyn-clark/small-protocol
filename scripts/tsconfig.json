{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "typeRoots": [
      "../node_modules/@types",
      "../node_modules"
    ]
  },
  "include": [
    "*.ts",
    "*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}