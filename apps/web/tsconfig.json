{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "ES2022",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"incremental": true,
		"paths": {
			"~/*": ["./app/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx", "**/*.d.ts"],
	"exclude": ["node_modules"]
}
